<Window x:Class="project.changeFamily"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project"
        mc:Ignorable="d"
        Title="تغییر نام خانوادگی" Height="170" Width="400">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="signup2.jpg"/>
        </Grid.Background>
        <Button Content="تایید" HorizontalAlignment="Left" Height="36" Margin="121,82,0,0" VerticalAlignment="Top" Width="133" Click="Button_Click" Background="{x:Null}" BorderBrush="#FF121111" FontWeight="Bold" FontSize="14"/>
        <TextBlock x:Name="name" HorizontalAlignment="Left" Height="27" Margin="10,26,0,0" TextWrapping="Wrap" Text="نام خانوادگی : " VerticalAlignment="Top" Width="106" FontWeight="Bold" TextDecorations="{x:Null}" TextAlignment="Center" FontSize="16"/>
        <TextBox x:Name="family_text" HorizontalAlignment="Left" Height="27" Margin="121,26,0,0" TextWrapping="Wrap" Foreground="#FF141C2C" Text="" VerticalAlignment="Top" Width="250" FontSize="16" FontWeight="Bold" Background="{x:Null}" BorderBrush="#FF151618" TextChanged="Name_text_TextChanged"/>
    </Grid>
</Window>
